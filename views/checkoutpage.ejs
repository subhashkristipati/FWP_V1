                            <option value="florida"> Maharashtra </option>
                            <option value="ohio"> Karnataka </option>
                            <option value="indiana"> Kerala </option>
                            <option value="connecticut"> TamilNadu </option>
                            <option value="maine"> Gujrat </option>
                            <option value="maryland"> Punjab </option>
                            <option value="virginia"> Delhi </option>
                          </select>
                          <div class="invalid-feedback">This Field is Required</div>
                        </div>
                        <div class="col-md-4">
                          <label for="zip" class="form-label">PinCode</label>
                          <input id="zip" type="text" class="form-control" placeholder="Enter your PinCode" required>
                          <div class="invalid-feedback">This Field is Required</div>
                        </div>
                      </div>
      
